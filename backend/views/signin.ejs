<title>Sign In - Double Feature</title>

<div class="user">
	<header class="user__header">
		<a href="/">
			<img src="/images/logo/vector/default-monochrome.svg" alt="" />
		</a>
	</header>
	<%- include('partials/messages') %>
	<form class="auth" action="/auth/signin" method="POST">
		<div class="form__group">
			<input type="text" name="username" id="username" placeholder="Username" class="form__input" />
		</div>

		<div class="form__group">
			<input type="password" name="password" id="password" placeholder="Password" class="form__input" />
		</div>

		<button class="btn" type="submit">Sign In</button>
	</form>
	<footer class="user__footer">New to Double Feature? <a href="/auth/signup">Sign Up</a> </footer>
</div>
